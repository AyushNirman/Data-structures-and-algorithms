class Main {
    public static void main(String[] args) {

        // Given array
        int[] a = {5, 3, 4, 1};

        // Loop starts from index 1
        // Because first element is already considered sorted
        for (int i = 1; i < a.length; i++) {

            // key = current element
            // Is element ko sahi jagah insert karna hai
            int key = a[i];

            // j = index just before key
            // Left side ke elements check karne ke liye
            int j = i - 1;

            // Jab tak:
            // 1) j array ke andar hai (j >= 0)
            // 2) left element key se bada hai
            while (j >= 0 && a[j] > key) {

                // Bade element ko ek step right shift karo
                a[j + 1] = a[j];

                // Eye ko ek step left le jao
                j--;
            }

            // Jab loop rukta hai:
            // Ya toh j = -1 ho gaya (left me kuch nahi bacha)
            // Ya a[j] <= key mil gaya
            // Dono case me key ko j+1 position pe insert karte hain
            a[j + 1] = key;
        }

        // Sorted array print
        for (int x : a) {
            System.out.print(x + " ");
        }
    }
}






ðŸ§  NOTE (Notebook ke liye short points)
key = a[i]        â†’ jo element insert karna hai
j = i - 1         â†’ left side check
a[j+1] = a[j]     â†’ shift right
j--               â†’ left move
j = -1            â†’ key sabse aage jayegi
a[j+1] = key      â†’ insert






